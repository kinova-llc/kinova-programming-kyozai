---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "初心者向け Webアプリ開発講座 - Kinova" } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-50">
    <header class="bg-white shadow-sm relative">
      <div class="container mx-auto px-4 py-4">
        <div class="flex justify-between items-center">
          <a href="/kinova-programming-kyozai/" class="flex items-center gap-2">
            <img src="/kinova-programming-kyozai/logo.png" alt="Kinova Logo" class="h-8 md:h-10" />
            <span class="text-kinova-gray font-semibold text-lg md:text-xl">Webアプリ開発講座</span>
          </a>
          
          <!-- ハンバーガーメニュー -->
          <button id="menu-button" class="md:hidden" aria-label="メニュー">
            <svg class="w-6 h-6 text-kinova-gray" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
          </button>
          
          <nav id="menu" class="hidden md:block absolute left-0 right-0 top-full bg-white shadow-lg md:shadow-none md:static md:bg-transparent">
            <ul class="flex flex-col md:flex-row gap-4 py-4 px-4 md:p-0">
              <li><a href="/kinova-programming-kyozai/" class="block py-2 md:py-0 text-kinova-gray hover:text-kinova-teal transition-colors">ホーム</a></li>
              <li><a href="/kinova-programming-kyozai/kinova-programming-kyozai/course" class="block py-2 md:py-0 text-kinova-gray hover:text-kinova-teal transition-colors">講座一覧</a></li>
              <li><a href="/kinova-programming-kyozai/todo-app" class="block py-2 md:py-0 text-kinova-gray hover:text-kinova-teal transition-colors">Todoアプリ</a></li>
              <li><a href="/kinova-programming-kyozai/about" class="block py-2 md:py-0 text-kinova-gray hover:text-kinova-teal transition-colors">サイトについて</a></li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    
    <main>
      <slot />
    </main>
    
    <footer class="bg-kinova-gray text-white py-8 mt-12">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row justify-between gap-8">
          <div class="md:w-1/3">
            <img src="/kinova-programming-kyozai//logo.png" alt="Kinova Logo" class="h-12 mb-4" />
            <p class="text-gray-300">初心者の方でも分かりやすいWebアプリ開発の情報を提供します。</p>
          </div>
          <div>
            <h3 class="font-semibold text-lg mb-4">リンク</h3>
            <ul class="space-y-2">
              <li><a href="/kinova-programming-kyozai/kinova-programming-kyozai/course" class="text-gray-300 hover:text-white transition-colors">講座一覧</a></li>
              <li><a href="/kinova-programming-kyozai/todo-app" class="text-gray-300 hover:text-white transition-colors">Todoアプリ</a></li>
              <li><a href="/kinova-programming-kyozai/about" class="text-gray-300 hover:text-white transition-colors">サイトについて</a></li>
              <li><a href="https://kinova.jp" class="text-gray-300 hover:text-white transition-colors">Kinova公式サイト</a></li>
            </ul>
          </div>
        </div>
        <div class="border-t border-gray-700 mt-8 pt-6 text-center text-gray-400">
          <p>&copy; {new Date().getFullYear()} Kinova. All rights reserved.</p>
        </div>
      </div>
    </footer>
    
    <script>
      const menuButton = document.getElementById('menu-button');
      const menu = document.getElementById('menu');
      
      if (!menuButton || !menu) {
        throw new Error('Menu button or menu element not found');
      }
      menuButton.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    </script>
  </body>
</html>

<style is:global>
  html {
    font-family: 'Inter', sans-serif;
  }
  
  body {
    margin: 0;
  }
</style>